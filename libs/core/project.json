{
  "name": "core",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "libs/core/src",
  "prefix": "sto",
  "tags": [],
  "targets": {
    "build-lib": {
      "executor": "@nx/angular:package",
      "options": {
        "project": "libs/core/ng-package.json"
      },
      "configurations": {
        "production": {
          "tsConfig": "libs/core/tsconfig.lib.prod.json"
        },
        "development": {
          "tsConfig": "libs/core/tsconfig.lib.json"
        }
      },
      "defaultConfiguration": "production"
    },
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["nx build-lib core", "nx post-build core"],
        "parallel": false
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/libs/core"],
      "options": {
        "jestConfig": "libs/core/jest.config.ts"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"]
    },
    "post-build": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "ts-node --project tools/tsconfig.tools.json tools/scripts/build-scss.ts",
          "ts-node --project tools/tsconfig.tools.json tools/scripts/copy-assets.ts"
        ],
        "parallel": true
      }
    },
    "publish": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "dist/libs/core",
        "commands": ["npm publish"],
        "parallel": false
      }
    },
    "storybook": {
      "executor": "@storybook/angular:start-storybook",
      "options": {
        "port": 4400,
        "configDir": "libs/core/.storybook",
        "browserTarget": "core:build-storybook",
        "compodoc": false
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    },
    "build-storybook": {
      "executor": "@storybook/angular:build-storybook",
      "outputs": ["{options.outputDir}"],
      "options": {
        "outputDir": "dist/storybook/core",
        "configDir": "libs/core/.storybook",
        "browserTarget": "core:build-storybook",
        "compodoc": false
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    },
    "test-storybook": {
      "executor": "nx:run-commands",
      "options": {
        "command": "test-storybook -c libs/core/.storybook --url=http://localhost:4400"
      }
    }
  }
}
