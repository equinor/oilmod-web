{
  "name": "datatable",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "libs/datatable/src",
  "prefix": "sto",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/angular:package",
      "options": {
        "project": "libs/datatable/ng-package.json"
      },
      "configurations": {
        "production": {
          "tsConfig": "libs/datatable/tsconfig.lib.prod.json"
        },
        "development": {
          "tsConfig": "libs/datatable/tsconfig.lib.json"
        }
      },
      "defaultConfiguration": "production"
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/libs/datatable"],
      "options": {
        "jestConfig": "libs/datatable/jest.config.ts"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"]
    },
    "publish": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "dist/libs/datatable",
        "commands": ["npm publish"],
        "parallel": false
      }
    },
    "storybook": {
      "executor": "@storybook/angular:start-storybook",
      "options": {
        "port": 4400,
        "configDir": "libs/datatable/.storybook",
        "browserTarget": "datatable:build-storybook",
        "compodoc": false
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    },
    "build-storybook": {
      "executor": "@storybook/angular:build-storybook",
      "outputs": ["{options.outputDir}"],
      "options": {
        "outputDir": "dist/storybook/datatable",
        "configDir": "libs/datatable/.storybook",
        "browserTarget": "datatable:build-storybook",
        "compodoc": false
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    },
    "test-storybook": {
      "executor": "nx:run-commands",
      "options": {
        "command": "test-storybook -c libs/datatable/.storybook --url=http://localhost:4400"
      }
    }
  }
}
