{
  "extends": "../../../tsconfig.base.json",
  "compilerOptions": {
    "types": ["node"],
    "emitDecoratorMetadata": true,
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler"
  },
  "exclude": [
    "../../../libs/**/*.spec.ts",
    "../../../libs/**/*.test.ts",
    "../**/*.spec.ts"
  ],
  "include": [
    "../src/**/*.ts",
    "../../../libs/**/src/**/*.ts",
    "../../../libs/**/src/**/*.stories.ts",
    "../../../libs/**/src/**/*.stories.mdx",
    "../src/**/*.stories.@(ts|tsx|js|jsx|mdx)",
    "../src/app/**/*.stories.ts",
    "*.ts"
  ]
}
